@page
@model WebAppCRUD.Pages.Users.EditModel
@using WebAppCRUD.Model
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>User</h4>
<hr />
<div class="row">
    @if (User.IsInRole(WC.AdminRole))
    {
        <div class="col-md-8">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="User.ID" />
                <div class="form-group">
                    <label asp-for="User.Name" class="control-label"></label>
                    <input asp-for="User.Name" class="form-control" />
                    <span asp-validation-for="User.Name" class="text-danger"></span>
                </div>
                <p>
                <div class="form-group">
                    <label asp-for="User.Description" class="control-label"></label>
                    <textarea asp-for="User.Description" class="form-control" ></textarea>
                    <span asp-validation-for="User.Description" class="text-danger"></span>
                </div>
                <p>
                <div class="form-group">
                    <label asp-for="User.Times" class="control-label"></label>
                    <input asp-for="User.Times" class="form-control" />
                    <span asp-validation-for="User.Times" class="text-danger"></span>
                </div>
                <p>
                <div class="mb-3">
                    <div class="form-group">
                        <label asp-for="User.IsWork" class="control-label"></label>
                        <input asp-for="User.IsWork" class="form-control form-check-input" type="checkbox"  />

                    </div>
                </div>
                <p>
                <div class="mb-3">
                    <div class="form-group">
                        <select asp-for="User.Сontractor" class="form-control">
                            <option value="">Выберите пользователя</option>
                            @foreach (var user in Model.Useres)
                            {
                                <option value="@user.FullName">@user.FullName</option>
                            }
                        </select>
                </div>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Изменить" class="btn btn-primary" />
            </div>
        </form>
        </div>
    }
    else
    {
        <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Name)
        </dd>
        
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Times)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Times)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User.Сontractor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Сontractor)
        </dd>
        </dl>
        <div class="col-md-8">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="User.ID" />
                <div class="form-group">
                    <label asp-for="User.Name" class="control-label" hidden></label>
                    <input asp-for="User.Name" class="form-control" hidden />
                    <span asp-validation-for="User.Name" class="text-danger" hidden></span>
                </div>
                <p>
                    <div class="form-group">
                        <label asp-for="User.Description" class="control-label"></label>
                        <textarea asp-for="User.Description" class="form-control"></textarea>
                        <span asp-validation-for="User.Description" class="text-danger"></span>
                    </div>
                <p>
                    <div class="form-group">
                        <label asp-for="User.Times" class="control-label" hidden></label>
                        <input asp-for="User.Times" class="form-control" hidden />
                        <span asp-validation-for="User.Times" class="text-danger" hidden></span>
                    </div>
                <p>
                    <div class="mb-3">
                        <div class="form-group">
                            <label asp-for="User.IsWork" class="control-label"></label>
                            <input asp-for="User.IsWork" class="form-control form-check-input" type="checkbox" />

                        </div>
                    </div>
                <p>
                    <div class="mb-3">
                        <div class="form-group">
                            <select asp-for="User.Сontractor" class="form-control" style="display: none;">
                                <option value="">Выберите пользователя</option>
                                            @foreach (var user in Model.Useres)
                                            {
                                    <option value="@user.FullName">@user.FullName</option>
                                            }
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Изменить" class="btn btn-primary" />
                    </div>
            </form>
        </div>
    }
</div>
<p>
<div>
    <a class="btn btn-success" asp-page="./Index">Вернуться к задачам</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
   
